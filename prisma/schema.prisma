// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Define o tipo de cliente que serÃ¡ gerado (JavaScript)
generator client {
  provider = "prisma-client-js"
}

// Define a fonte de dados (nosso banco de dados)
datasource db {
  provider = "postgresql" // Estamos usando PostgreSQL
  url      = env("DATABASE_URL") // Pega a string de conexÃ£o do arquivo .env
}

// Nosso modelo de tabela para os agendamentos
model Agendamento {
  id           Int      @id @default(autoincrement())
  nome_cliente String
  data_hora    DateTime
  valor        Decimal  @default(0) // ðŸ’¡ CAMPO ADICIONADO
  criado_em    DateTime @default(now())
}